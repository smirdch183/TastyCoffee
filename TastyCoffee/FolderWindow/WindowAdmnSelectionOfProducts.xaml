<Window x:Class="TastyCoffee.FolderWindow.WindowAdmnSelectionOfProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TastyCoffee.FolderWindow"
        mc:Ignorable="d"
        Title="Выбор добавление товаров"
        WindowStartupLocation="CenterScreen"
        Window.SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Style="{DynamicResource Logo}" Width="100"/>
        <Label Grid.Column="1" Content="Товары" Style="{DynamicResource LogoLabel}"/>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <Button x:Name="BnCoffe" Content="Кофе" Click="BnCoffe_Click"/>
            <Button x:Name="BnTae" Content="Чай" Click="BnTae_Click"/>
        </StackPanel>
    </Grid>
</Window>
